{
  "builders": [
    {
      "type": "virtualbox",
      "guest_os_type": "ArchLinux_64",
      "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/ArchLinux/iso/2013.11.01/archlinux-2013.11.01-dual.iso",
      "iso_checksum": "4fd51d23d09009da3eb34c92d40a56a1c047515e",
      "iso_checksum_type": "sha1",
      "disk_size": 8000,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "http_directory": "http",
      "boot_command": [
        "<enter><wait10><wait10>",
        "curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/setup.sh<enter><wait>",
        "sh setup.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}<enter>"
      ],
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "shutdown_command": "sudo shutdown -h now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": ["scripts/vagrant.sh", "scripts/chef.sh"]
    }
  ],
  "post-processors": ["vagrant"]
}
