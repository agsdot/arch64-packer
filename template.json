{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "ArchLinux_64",
      "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/ArchLinux/iso/2014.01.05/archlinux-2014.01.05-dual.iso",
      "iso_checksum": "4d43709987c3cf19059195f9450465de3b87a5cb",
      "iso_checksum_type": "sha1",
      "disk_size": 8000,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "http_directory": "http",
      "boot_command": [
        "<enter><wait10><wait10>",
        "curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/setup.sh<enter><wait>",
        "sh setup.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}<enter>"
      ],
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"]
      ],
      "shutdown_command": "sudo shutdown -h now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": ["scripts/vagrant.sh"]
    }
  ],
  "post-processors": ["vagrant"]
}
